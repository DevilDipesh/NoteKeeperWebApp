@model NoteKeeperWebApp.UserDetail

@{
    ViewBag.Title = "DeleteAccount";
}

<h2>DeleteAccount</h2>

<h3>Are you sure you want to delete this?</h3>
<h5>Note: All the notes tagged to this account will be deleted.</h5>
